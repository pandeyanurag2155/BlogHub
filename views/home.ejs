<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Home Page</title>
</head>

<body style="margin: 0px; background-color: #363535;" >
    <%- include('./partials/nav') %>
    
    <div class=" mt-3 row row-cols-4">
    <% (blogs).forEach(blog=> { %>
            <div class="card col m-5">
                    <img src=<%= blog.coverImageURL%> class="card-img-top mt-1" alt="...">
                    <div class="card-body">
                        <h5 class="card-title " style="text-align: center;" >
                            <%= blog.title %>
                        </h5>
                        <a href="/blog/<%= blog._id%>" class="btn btn-primary" style="width: 100%;">Read</a>
                    </div>
                    
                </div>
                <% }) %>
            </div>
                <%- include('./partials/script') %>
</body>

</html>